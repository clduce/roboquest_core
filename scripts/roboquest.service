[Unit]
Description=Start the RoboQuest application
After=network.target

[Service]
ExecStart=docker run -it --name roboquest --privileged --rm --net=host -v /var/run/dbus:/var/run/dbus  -v /dev/video0:/dev/video0  roboquest /bin/bash --login src/roboquest_core/scripts/start.bash
User=root
Restart=always
RestartSec=15
WorkingDirectory=/home/ubuntu

[Install]
WantedBy=default.target
